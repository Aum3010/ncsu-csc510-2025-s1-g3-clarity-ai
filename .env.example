# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to create your environment files:
# - Copy to .env (for Docker Compose)
# - Copy to backend/.env (for Flask app)  
# - Copy to frontend/.env (for React app)
#
# SECURITY WARNING: Never commit real API keys or passwords to version control
# =============================================================================

# -----------------------------------------------------------------------------
# DOCKER COMPOSE VARIABLES (Root .env file)
# -----------------------------------------------------------------------------
# SuperTokens Database Configuration
SUPERTOKENS_POSTGRES_DB=supertokens
SUPERTOKENS_POSTGRES_USER=supertokens_user
SUPERTOKENS_POSTGRES_PASSWORD=supertokens_password

# Flask Application Database Configuration  
POSTGRES_DB=clarity_ai
POSTGRES_USER=clarity_user
POSTGRES_PASSWORD=clarity_password

# SuperTokens API Configuration
SUPERTOKENS_API_KEY=your-local-supertokens-api-key-here

# -----------------------------------------------------------------------------
# BACKEND VARIABLES (backend/.env file)
# -----------------------------------------------------------------------------
# SuperTokens Configuration
SUPERTOKENS_CONNECTION_URI=http://localhost:3567
SUPERTOKENS_API_KEY=your-local-supertokens-api-key-here
APP_NAME=Clarity AI
API_DOMAIN=http://localhost:5000
WEBSITE_DOMAIN=http://localhost:5173
SESSION_TIMEOUT=3600
OTP_EXPIRY=600

# SuperTokens Dashboard Configuration
SUPERTOKENS_DASHBOARD_ADMIN_EMAIL=admin@example.com

# Session Security Configuration
REFRESH_TIMEOUT=86400
CSRF_PROTECTION=true
SECURE_COOKIES=auto
SAME_SITE=lax
MAX_SESSION_AGE=604800
SESSION_REFRESH_THRESHOLD=1800

# Flask Application Database
POSTGRES_USER=clarity_user
POSTGRES_PASSWORD=clarity_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=clarity_ai

# OpenAI Configuration (for RAG service)
OPENAI_API_KEY=your-openai-api-key-here

# Database Connection Pooling Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true
DB_POOL_TIMEOUT=30
DB_ECHO_POOL=false

# Database Query Performance Monitoring
DB_QUERY_MONITORING=false
SLOW_QUERY_THRESHOLD=1.0

# -----------------------------------------------------------------------------
# FRONTEND VARIABLES (frontend/.env file)
# -----------------------------------------------------------------------------
# Vite App Configuration
VITE_APP_NAME=Clarity AI
VITE_API_DOMAIN=http://localhost:5000
VITE_WEBSITE_DOMAIN=http://localhost:5173
VITE_SESSION_SCOPE=localhost

# Development Environment
NODE_ENV=development